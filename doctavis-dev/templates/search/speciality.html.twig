{% extends 'base.html.twig' %}
{% block body %}
    {% include 'partiels/flashbag.html.twig' %}
    <div class="container">
        <div class="row text-center justify-content-center m-5">
            <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                <img class="my-3 w-100" src="{{ asset('img/professionnels-de-sante.png') }}" alt="Groupe de trois professionnels de santé"/>
            </div>
        </div>
        <div class="row justify-content-center text-center">
            <div class="col-sm-8 col-xl-6">
                {{ form_start(form) }}
                <h3 class="fs-4 fw-bold mb-4">Je connais la spécialité du practicien que je cherche </h3>
                <div class="row">
                    <div class="col-sm-auto">
                        {{ form_widget(form.specialities, { 'attr': { 'class': 'js-example-basic-multiple form-select' }}) }}
                        <p class="asterisque">Exemple : Généraliste, Psychologue, Hypnothérapeute, ...</p>
                    </div>
                    <div class="col-10 offset-1 col-md-2 offset-md-0">
                        <a class="btn btn-light" href="{{ path('search_generalist') }}">Non</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col d-flex justify-content-center justify-content-lg-between align-items-center flex-wrap flex-lg-nowrap">
                        <a class="fs-4 fw-bold" href="{{ path('home') }}">Je connais ma pathologie</a>
                        {{ form_label(form.submit) }}
                        {{ form_widget(form.submit, { 'attr': { 'class': 'btn btn-primary my-5' }}) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
